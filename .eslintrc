{
  "extends": [
    "eslint:recommended",
    "plugin:ft-flow/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "plugins": [
    "ft-flow",
    "react-hooks"
  ],
  "parser": "hermes-eslint",
  "rules": {
    "curly": ["error", "multi-line"],
    "linebreak-style": ["error", "unix"],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "new-cap": "off",
    "no-case-declarations": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": [
      "error",
      { 
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_" 
      }
    ]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "__tests__",
    "node_modules",
    "coverage",
    "examples",
    "lib",
    "es6"
  ]
}